# --- Git ---
alias gs="git status --short"
alias gf="git fetch"
alias gd="git diff"
alias ga="git add"
alias gc="git commit -m"
alias gp="git push"
alias gpl="git pull"
alias gl="git log --all --graph --pretty"
alias gb="git branch"
alias gi="git init"
alias gcl="git clone"

# --- listing ---
alias ll='ls -alF'
alias la='ls -A --color=auto'
alias l='ls -CF'

# --- Utils ---
alias gitfetch='onefetch'
alias vim='nvim'
alias pip='uv pip'
alias treetree='/usr/bin/tree'
alias tree='tree -F --dirsfirst'
alias path="echo $PATH | tr ':' '\n'"

# --- Navigation Shortcuts ---
alias cd..='cd ..'
alias docs='cd ~/Documents'
alias dev='cd ~/dev'
alias code='cd ~/dev/code'
